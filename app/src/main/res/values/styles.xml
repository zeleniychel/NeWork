<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.AppBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">#FEF7FF</item>
        <item name="titleTextColor">#1D1B20</item>
        <item name="subtitleTextColor">@color/material_on_primary_emphasis_medium</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Toolbar.Popup.Primary</item>
    </style>

    <style name="MyCustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:checkable">true</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>