<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.AppBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">#FEF7FF</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Toolbar.Popup.Primary</item>
        <item name="materialCalendarFullscreenTheme">
            @style/ThemeOverlay.MaterialComponents.MaterialCalendar
        </item>
    </style>

    <style name="MyCustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:checkable">true</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">14sp</item>
        <item name="iconTint">@color/purple</item>
    </style>

    <style name="CustomDateDialog" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorSurfaceContainerHigh">@color/magnolia</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorOutlineVariant">#CAC4D0</item>
    </style>

</resources>